@page "{id}"
@model fuck.Pages.Students.Edit
@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <input type="hidden" asp-for="Student.Id" />
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input type="text" class="form-control" id="FirstName" name="Student.FirstName" asp-for="Student.FirstName">
    </div>
    <div class="form-group">
        <label for="LastName">Last Name</label>
        <input type="text" class="form-control" id="LastName" name="Student.LastName" asp-for="Student.LastName">
    </div>
    <div class="form-group">
        <label for="Age">Age</label>
        <input type="number" class="form-control" id="Age" name="Student.Age" asp-for="Student.Age">
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="Student.Address" asp-for="Student.Address">
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>