@page
@model fuck.Pages.Students.Index
@{
    ViewData["Title"] = "Index";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Age</td>
                <td>@student.Address</td>
                <td><a asp-page="Edit" asp-route-id="@student.Id">Edit</a></td>
                <td><a asp-page="Delete" asp-route-id="@student.Id">Delete</a></td>
            </tr>
            
        }
    </tbody>
</table>

<h3><a asp-page="Create">Create New Student</a></h3>