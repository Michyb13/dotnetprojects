@page "{id}"
@model fuck.Pages.Students.Delete
@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Confirm deletion of student record</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.Student.FirstName
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.Student.LastName
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Model.Student.Age
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.Student.Address
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Student.Id" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>