@page "{id}"
@model TodoList.Pages.TodoItem.Edit
@{
    ViewData["Title"] = "Edit Item";
}

<h1>@ViewData["Title"]</h1>



<form method="post">
     <div class="form-group">
        <label asp-for="TodoItem.Text">Old Text</label>
        <input asp-for="TodoItem.Text" class="form-control" disabled />
        
    </div>

    <div class="form-group">
        <label asp-for="Updated.Text">New Text</label>
        <input asp-for="Updated.Text" class="form-control" />
        <span asp-validation-for="Updated.Text" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>