@model WebApp.Pages.Employees.Create


<h1>Create New Employee</h1>


<form method="post">
    <label>Name</label>
    <input type="text" asp-for= "newEmployee.Name" required/>
    <label>Address</label>
    <input type="text" asp-for= "newEmployee.Address" required/>
    <label>Phone</label>
    <input type="number" asp-for= "newEmployee.Phone" required/>
    <button type="submit">Add</button>
</form>